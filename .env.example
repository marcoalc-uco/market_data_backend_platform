# =============================================================================
# Environment Configuration Example
# Copy this file to .env and adjust values as needed
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=Market Data Backend Platform
APP_VERSION=0.1.0
DEBUG=false

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_PREFIX=/api/v1

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Log format: "json" (production) or "console" (development)
LOG_FORMAT=console

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
# Individual connection parameters (recommended for security)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=market_data

# Alternative: Full connection URL (overrides individual params if set)
# DATABASE_URL=postgresql://user:password@localhost:5432/market_data

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
